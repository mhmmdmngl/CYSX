<script>
	let intervalId = null;
	let surecTekrarSayisi = 0;
	let ilkkapikapandiFlag = false;
	let kupeokunduFlag = false;
	let agirlikAlindiFlag = false;
	let cikisKapisiAcildiFlag = false;
	let isTamamlandiFlag = false;
	let maxTekrar = 0; // Süreç tekrar sayısı

	function basla() {
		// Eğer mevcut bir interval varsa temizle
		if (intervalId !== null) {
			clearInterval(intervalId);
		}

		// İstek ID
		var istekId = document.getElementById("guidId").value;

		// Ağırlık ve RFID
		var agirlik = document.getElementById("agirlikTxt").value;
		var rfid = document.getElementById("rfidTxt").value;

		// Süreç Tekrarı ve Sınırsız Mod
		maxTekrar = document.querySelector("input[name='surectekrar']").value;
		var sinirsizMod = document.getElementById("sinirsizmod").checked;

		// Giriş ve Çıkış Kapısı ağırlıkları
		var girisMax = document.querySelector("input[name='girismax']").value;
		var cikisMin = document.querySelector("input[name='cikismin']").value;

		// Yön 1, Yön 2, Yön 3 ağırlıkları
		var kapi1Agirlik = document.querySelector("input[name='kapi1Agirlik']").value;
		var kapi2Agirlik = document.querySelector("input[name='kapi2Agirlik']").value;
		var kapi3Agirlik = document.querySelector("input[name='kapi3Agirlik']").value;

		// Yeni eklenen alanların değerlerini al
		var girissonrasibekleme = document.querySelector("input[name='girissonrasibekleme']").value;
		var giriskapikapandiktansonrakibekleme = document.querySelector("input[name='giriskapikapandiktansonrakibekleme']").value;
		var kupeokumasonrasibekleme = document.querySelector("input[name='kupeokumasonrasibekleme']").value;
		var cikiskapisisonrasibekleme = document.querySelector("input[name='cikiskapisisonrasibekleme']").value;
		var sonagirlikbekleme = document.querySelector("input[name='sonagirlikbekleme']").value;

		// Cihaz ID'si
		var cihazid = 1;

		// Giriş, çıkış ve yön ağırlıklarını ve yeni bilgileri float olarak al
		var data = {
			cihazid: cihazid,
			girisMax: parseFloat(girisMax),
			cikisMin: parseFloat(cikisMin),
			kapi1Agirlik: parseFloat(kapi1Agirlik),
			kapi2Agirlik: parseFloat(kapi2Agirlik),
			kapi3Agirlik: parseFloat(kapi3Agirlik),
			girissonrasibekleme: parseFloat(girissonrasibekleme),
			giriskapikapandiktansonrakibekleme: parseFloat(giriskapikapandiktansonrakibekleme),
			kupeokumasonrasibekleme: parseFloat(kupeokumasonrasibekleme),
			cikiskapisisonrasibekleme: parseFloat(cikiskapisisonrasibekleme),
			sonagirlikbekleme: parseFloat(sonagirlikbekleme)
		};

		// AJAX ile backend'e post request gönderiyoruz
		$.ajax({
			url: '../../api/ProcessHelper/BaslaVeYeniSurecEkle',
			type: 'POST',
			contentType: 'application/json',
			data: JSON.stringify(data),
			success: function (response) {
				var guid = response.guid;
				document.getElementById("guidId").value = guid;

				// Toast: Giriş kapısı açıldı, hayvan bekleniyor
				toastr.info('Giriş Kapısı Açıldı, Hayvan Bekleniyor', 'Bilgilendirme', { timeOut: 3000 });

				console.log("Yeni süreç başlatıldı, GUID: " + guid);

				// Süreç kontrolünü başlat
				surekliVeriKontrol();
			},
			error: function (error) {
				console.error("Süreç başlatılamadı: ", error);
			}
		});
	}

	function surekliVeriKontrol() {
		// Yeni süreç başlatılmadan önce intervali sıfırla
		if (intervalId !== null) {
			clearInterval(intervalId);
		}

		intervalId = setInterval(() => {
			// GUID her sorgulamada tekrar alınır
			var guid = document.getElementById("guidId").value;

			// Eğer GUID boşsa sorgulamaya devam eder, return yapılmaz
			if (!guid) {
				console.log("GUID mevcut değil, bekleniyor...");
				return;
			}

			// Backend'den AJAX ile veri çekme
			$.ajax({
				url: '../../api/ProcessHelper/GetProcessDataByGuid',
				type: 'GET',
				data: { guid: guid },
				success: function (response) {
					const ilkkapikapandi = response.ilkkapikapandi;
					const kupeOkundu = response.kupeokundu;
					const sonAgirlikAlindi = response.sonagirlikalindimi;
					const cikiskapisiacildimi = response.cikiskapisiacildimi;
					const isTamamlandi = response.isTamamlandi;
					console.log(response);
					// Küpe ve ağırlık verilerini aldık
					const kupe = response.okunankupe;
					const agirlik = response.sonagirlik;

					// Küpe verisi textbox'a yazdırma
					if (kupeOkundu == 1) {
						document.getElementById("rfidTxt").value = kupe;
					} else {
						document.getElementById("rfidTxt").value = "Bekleniyor...";
					}

					// Ağırlık verisi textbox'a yazdırma
					if (sonAgirlikAlindi == 1) {
						document.getElementById("agirlikTxt").value = agirlik;
					} else {
						document.getElementById("agirlikTxt").value = "Bekleniyor...";
					}

					// Toast: İlk kapı kapandı
					if (ilkkapikapandi == 1 && !ilkkapikapandiFlag) {
						toastr.error('Hayvan Giriş Yaptı, Küpe Okuması Bekleniyor', 'Uyarı', { timeOut: 3000, backgroundColor: '#ff4d4d', color: '#ffffff' });
						ilkkapikapandiFlag = true;
					}

					// Toast: Küpe okundu
					if (kupeOkundu == 1 && !kupeokunduFlag) {
						toastr.success('Küpe Okuması Başarılı', 'Başarılı', { timeOut: 3000, backgroundColor: '#28a745', color: '#ffffff' });
						kupeokunduFlag = true;
					}

					// Toast: Ağırlık alındı
					if (sonAgirlikAlindi == 1 && !agirlikAlindiFlag) {
						toastr.info('Ağırlık Ölçümü Alındı', 'Bilgilendirme', { timeOut: 3000, backgroundColor: '#17a2b8', color: '#ffffff' });
						agirlikAlindiFlag = true;
					}

					// Toast: Çıkış kapısı açıldı
					if (cikiskapisiacildimi == 1 && !cikisKapisiAcildiFlag) {
						toastr.warning('Hayvanın çıkış yapması bekleniyor', 'Bilgi', { timeOut: 3000, backgroundColor: '#ffc107', color: '#ffffff' });
						cikisKapisiAcildiFlag = true;
					}

					// Toast: Süreç tamamlandı
					if (isTamamlandi == 1 && !isTamamlandiFlag) {
						toastr.success('Süreç Başarıyla Tamamlandı', 'Başarılı', { timeOut: 3000, backgroundColor: '#007bff', color: '#ffffff' });
						isTamamlandiFlag = true;

						// Sınırsız mod veya süreç tekrar sayısı varsa
						if (document.getElementById("sinirsizmod").checked) {
							// Sınırsız moddaysa tekrar başlat
							resetFlags();
							basla();
						} else if (maxTekrar > 0) {
							// Tekrar sayısı varsa
							surecTekrarSayisi++;
							if (surecTekrarSayisi < maxTekrar) {
								resetFlags();
								basla();  // Süreç tekrar başlatılır
							} else {
								clearInterval(intervalId);
								toastr.info('Süreç Tamamlandı ve Tüm Tekrarlar Bitti', 'Bilgi', { timeOut: 3000 });
							}
						} else {
							clearInterval(intervalId);
						}
					}
				},
				error: function (error) {
					console.error("Veri çekilirken hata oluştu: ", error);
				}
			});
		}, 1000);
	}

	// Flagleri sıfırlayan fonksiyon
